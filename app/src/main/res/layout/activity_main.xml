<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hku.yita.notelephonedeception.MainActivity">

    <SlideView.SlideSwitchView
        android:id="@+id/swit"
        android:layout_width="71dp"
        android:layout_height="38dp"
        slideswitch:isOpen="true"
        slideswitch:shape="circle"
        slideswitch:themeColor="@color/colorPrimary"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="30dp">
    </SlideView.SlideSwitchView>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toLeftOf="@+id/swit"
        android:layout_marginRight="8dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="157dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
